<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="client" type="jarvis.client.common.Configuration.JarvisClientConfigurationSection, jarvis.client.common"/>
    <section name="FileSystemTrigger" type="jarvis.client.common.Triggers.FileSystemTrigger.FileSystemTriggerConfigurationSection, jarvis.client.common"/>
  </configSections>
  <appSettings>
   
  </appSettings>
  <client>
    <ServerUrl  value="http://localhost:5368/Services" />
    <TriggerService  value="TriggerService.svc" />
    <ClientService value="ClientService.svc" />
  </client>
  <FileSystemTrigger>
    <IsEnabled value="true"/>
    <Paths>
      <add Path="C:\Temp" />
    </Paths>
  </FileSystemTrigger>
  <log4net>
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="log-file.txt" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="FileAppender" />
    </root>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.5.0.0" newVersion="4.5.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>